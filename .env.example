# ISP Framework Environment Configuration
# Copy this file to .env and update values for your deployment

# Database Configuration
POSTGRES_DB=isp_framework
POSTGRES_USER=isp_user
POSTGRES_PASSWORD=isp_password

# Redis Configuration (leave empty for no password)
REDIS_PASSWORD=

# MinIO S3 Storage Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# MinIO Bucket Configuration
MINIO_BUCKET_CUSTOMER_UPLOADS=customer-uploads
MINIO_BUCKET_TICKET_MEDIA=ticket-media
MINIO_BUCKET_CSV_IMPORTS=csv-imports
MINIO_BUCKET_BACKUPS=backups
MINIO_BUCKET_TEMP=temp

# JWT Authentication Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# FreeRADIUS Configuration
RADIUS_SECRET=testing123

# Application Configuration
LOG_LEVEL=INFO
SECRETS_BACKEND=environment

# Network Configuration
BACKEND_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813
